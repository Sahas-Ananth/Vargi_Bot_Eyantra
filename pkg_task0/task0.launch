<launch>
	<arg name="record" default="true"/>
	<arg name="duration" default="10"/>
	<arg name="rec_name" default="VB_2195.bag"/>

	<group if="$(arg record)">

	<node name="task0_recorder" pkg="rosbag" type="record"
	   args="record -O $(find pkg_task0)/bag_files/$(arg rec_name) --duration=$(arg duration) --chunksize=10 /turtle1/cmd_vel /turtle1/pose" output="screen"/>

	</group>
    <node name = "turtle_launcher" pkg = "turtlesim" type = "turtlesim_node" />
    <node name = "turtle_controller" pkg = "pkg_task0" type="node_turtle_revolve.py" />
</launch>